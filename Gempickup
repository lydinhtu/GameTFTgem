using UnityEngine;

public class GemPickup : MonoBehaviour
{
    public GemData gem;
    public int amount = 1;

    private void OnTriggerEnter2D(Collider2D other)
    {
        if (!other.CompareTag("Player")) return;

        if (InventoryManager.I != null)
            InventoryManager.I.AddGem(gem, amount);

        Destroy(gameObject);
    }
}
