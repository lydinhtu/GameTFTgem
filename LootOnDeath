using System.Collections.Generic;
using UnityEngine;

public class LootOnDeath : MonoBehaviour
{
    public List<LootEntry> lootTable = new List<LootEntry>();

    public void TryDrop()
    {
        if (lootTable == null || lootTable.Count == 0) return;

        foreach (var e in lootTable)
        {
            if (e == null || e.gem == null || e.gem.worldPrefab == null) continue;
            if (Random.value > e.chance) continue;

            int amount = Random.Range(e.minAmount, e.maxAmount + 1);

            GameObject go = Instantiate(e.gem.worldPrefab, transform.position, Quaternion.identity);

            var gw = go.GetComponent<GemWorld>();
            if (gw == null) gw = go.AddComponent<GemWorld>();

            gw.gem = e.gem;
            gw.amount = amount;
        }
    }
}
